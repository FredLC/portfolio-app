<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id %>">
    <%= image_tag portfolio_item.thumb_image.to_s, size: "350x200" unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text"><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
      <div class="d-flex justify-content-between align-items-center">
        <% if logged_in?(:site_admin) %>
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_portfolio_path(portfolio_item)%></button>
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Delete', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' }  %></button>
        </div>
        <% end %>
        <small class="text-muted"><%= portfolio_item.subtitle %></small>
      </div>
    </div>
  </div>
</div>



