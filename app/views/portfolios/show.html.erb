<div class="container">
	<div class="row">
		<div class="col-md-7">
			<%= image_tag portfolio_image(@portfolio_item.main_image, type: 'main'), size: '600x400' %>
		</div>
		<div class="col-md-5">
			<h1><%= @portfolio_item.title %></h1>
			<em><%= @portfolio_item.subtitle %></em>
			<p><%= @portfolio_item.body %></p>

			<h2>Technologies used:</h2>

			<% @portfolio_item.technologies.each do |t| %>
				<p><%= t.name %></p>
			<% end %>

			<% if logged_in?(:site_admin) %>
				<div class="mt-4">
					<%= link_to 'Edit', edit_portfolio_path(@portfolio_item), class: 'btn btn-secondary' %>
				</div>
			<% end %>
		</div>
	</div>
</div>